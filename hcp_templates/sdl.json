{
  "name": "hsc",
  "product_version": "4.0",
  "sdl_version": "{{TAG}}",
  "vendor": "HPE",
  "components": [
    {
      "name": "hsc-console",
      "version": "1.0.0",
      "vendor": "HPE",
      "external_name": "Console",
      "min_RAM_mb": 256,
      "min_disk_gb": 1,
      "min_VCPU": 1,
      "platform": "linux-x86_64",
      "capabilities": [],
      "repository": "{{REGISTRY}}",
      "image": "hsc/hsc-console:{{TAG}}",
      "workload_type": "container",
      "entrypoint": [],
      "parameters": [
        {
          "name": "CONSOLE_VERSION"
        },
        {
          "name": "console-cert"
        },
        {
          "name": "console-cert-key"
        }
      ],
      "affinity": [],
      "min_instances": 1,
      "max_instances": 1,
      "service_ports": [
        {
          "name": "http",
          "protocol": "TCP",
          "source_port": 80,
          "target_port": 80,
          "public": true
        },
        {
          "name": "https",
          "protocol": "TCP",
          "source_port": 443,
          "target_port": 443,
          "public": true
        }
      ],
      "volume_mounts": []
    },
    {
      "name": "hsc-proxy",
      "version": "1.0.0",
      "vendor": "HPE",
      "external_name": "Console - Proxy",
      "min_RAM_mb": 256,
      "min_disk_gb": 1,
      "min_VCPU": 1,
      "platform": "linux-x86_64",
      "capabilities": [],
      "repository": "{{REGISTRY}}",
      "image": "hsc/hsc-proxy:{{TAG}}",
      "workload_type": "container",
      "entrypoint": [],
      "parameters": [
        {
          "name": "CONSOLE_VERSION"
        },
        {
          "name": "PGSQL_USER"
        },
        {
          "name": "pgsql-password"
        },
        {
          "name": "PGSQL_DATABASE"
        },
        {
          "name": "PGSQL_HOST"
        },
        {
          "name": "PGSQL_PORT"
        },
        {
          "name": "PGSQL_CONNECT_TIMEOUT_IN_SECS"
        },
        {
          "name": "PGSQL_SSL_MODE"
        },
        {
          "name": "console-proxy-cert"
        },
        {
          "name": "console-proxy-cert-key"
        },
        {
          "name": "HTTP_CLIENT_TIMEOUT_IN_SECS"
        },
        {
          "name": "SKIP_TLS_VERIFICATION"
        },
        {
          "name": "CONSOLE_PROXY_TLS_ADDRESS"
        },
        {
          "name": "CONSOLE_CLIENT"
        },
        {
          "name": "HCE_CLIENT"
        },
        {
          "name": "HCF_CLIENT"
        },
        {
          "name": "ALLOWED_ORIGINS"
        },
        {
          "name": "session-store-secret"
        },
        {
          "name": "VCS_CLIENTS"
        },
        {
          "name": "ENCRYPTION_KEY_VOLUME"
        },
        {
          "name": "ENCRYPTION_KEY_FILENAME"
        }
      ],
      "affinity": [],
      "min_instances": 1,
      "max_instances": 1,
      "service_ports": [
        {
          "name": "proxy",
          "protocol": "TCP",
          "source_port": 3003,
          "target_port": 3003,
          "public": false
        }
      ],
      "volume_mounts": [
        {
          "volume_name": "hsc-upgrade-volume",
          "mountpoint": "/hsc-upgrade-volume"
        },
        {
          "volume_name": "hsc-encryption-key-volume",
          "mountpoint": "/hsc-encryption-key-volume"
        }
      ]
    },
    {
      "name": "hsc-db",
      "version": "1.0.0",
      "vendor": "HPE",
      "external_name": "Console - Database",
      "min_RAM_mb": 256,
      "min_disk_gb": 1,
      "min_VCPU": 1,
      "platform": "linux-x86_64",
      "capabilities": [],
      "repository": "docker.io",
      "image": "postgres:9.5",
      "workload_type": "container",
      "entrypoint": [],
      "parameters": [
        {
          "name": "CONSOLE_VERSION"
        },
        {
          "name": "POSTGRES_USER"
        },
        {
          "name": "postgres-password"
        },
        {
          "name": "PGDATA"
        },
        {
          "name": "console-db-cert"
        },
        {
          "name": "console-db-cert-key"
        }
      ],
      "affinity": [],
      "min_instances": 1,
      "max_instances": 1,
      "service_ports": [
        {
          "name": "postgres",
          "protocol": "TCP",
          "source_port": 5432,
          "target_port": 5432,
          "public": false
        }
      ],
      "volume_mounts": [
        {
          "volume_name": "pgsql-data-volume",
          "mountpoint": "/database"
        }
      ]
    }
  ],
  "features": {
    "auth": [
      {
        "auth_zone": "default",
        "clients": [
          {
            "id": "console",
            "name": "Console Client",
            "scopes": [
                "hcp.admin",
                "hcp.user",
                "uaa.user",
                "hcp.publisher"
            ],
            "authorized_grant_types": [
                "implicit",
                "password",
                "refresh_token"
            ],
            "access_token_validity": 3600,
            "refresh_token_validity": 2592000
          }
        ]
      }
    ]
  },
  "preflight": [
    {
      "name": "hsc-initiate-upgrade-job",
      "version": "1.0.0",
      "vendor": "HPE",
      "external_name": "Console - Initiate Service Upgrade Job",
      "min_RAM_mb": 512,
      "min_disk_gb": 1,
      "min_VCPU": 1,
      "platform": "linux-x86_64",
      "workload_type": "container",
      "capabilities": [],
      "repository": "{{REGISTRY}}",
      "image": "hsc/hsc-initiate-upgrade-job:{{TAG}}",
      "entrypoint": [],
      "parameters": [
        {
          "name": "CONSOLE_VERSION"
        },
        {
          "name": "UPGRADE_VOLUME"
        },
        {
          "name": "UPGRADE_LOCK_FILENAME"
        },
        {
          "name": "ENCRYPTION_KEY_VOLUME"
        },
        {
          "name": "ENCRYPTION_KEY_FILENAME"
        }
      ],
      "affinity": [],
      "min_instances": 1,
      "max_instances": 1,
      "retry_count": 100,
      "service_ports": [],
      "volume_mounts": [
        {
          "volume_name": "hsc-upgrade-volume",
          "mountpoint": "/hsc-upgrade-volume"
        },
        {
          "volume_name": "hsc-encryption-key-volume",
          "mountpoint": "/hsc-encryption-key-volume"
        }
      ]
    }
  ],
  "postflight": [
    {
      "name": "hsc-finalize-upgrade-job",
      "version": "1.0.0",
      "vendor": "HPE",
      "external_name": "Console - Finalize Service Upgrade Job",
      "min_RAM_mb": 512,
      "min_disk_gb": 1,
      "min_VCPU": 1,
      "platform": "linux-x86_64",
      "workload_type": "container",
      "capabilities": [],
      "repository": "{{REGISTRY}}",
      "image": "hsc/hsc-finalize-upgrade-job:{{TAG}}",
      "entrypoint": [],
      "parameters": [
        {
          "name": "CONSOLE_VERSION"
        },
        {
          "name": "DB_HOST"
        },
        {
          "name": "CFGDB_PORT"
        },
        {
          "name": "POSTGRES_DB"
        },
        {
          "name": "POSTGRES_USER"
        },
        {
          "name": "postgres-password"
        },
        {
          "name": "PGSQL_DATABASE"
        },
        {
          "name": "PGSQL_USER"
        },
        {
          "name": "pgsql-password"
        },
        {
          "name": "UPGRADE_VOLUME"
        },
        {
          "name": "UPGRADE_LOCK_FILENAME"
        }
      ],
      "affinity": [],
      "min_instances": 1,
      "max_instances": 1,
      "retry_count": 100,
      "service_ports": [],
      "volume_mounts": [
        {
          "volume_name": "hsc-upgrade-volume",
          "mountpoint": "/hsc-upgrade-volume"
        }
      ]
    }
  ],
  "volumes": [
    {
      "name": "pgsql-data-volume",
      "size_gb": 10,
      "filesystem": "ext4",
      "shared": false
    },
    {
      "name": "hsc-upgrade-volume",
      "size_gb": 1,
      "shared": true
    },
    {
      "name": "hsc-encryption-key-volume",
      "size_gb": 1,
      "shared": true
    }
  ],
  "parameters": [
    {
      "name": "CONSOLE_VERSION",
      "description": "The current version of the Helion Stackato Console. This param will be automatically incremented with each release of the Console so as to allow HCP to properly restart each component at the time of upgrade. This should not be changed manually.",
      "default": "{{TAG}}",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "CONSOLE_CA_CERT",
      "description": "CA Cert that is used to sign other SSL Certificates",
      "required": true,
      "secret": false,
      "generator":
        {
          "id": "ca_cert",
          "generate": {
            "type": "CACertificate",
            "value_type": "certificate"
          }
        }
    },
    {
      "name": "console-ca-cert-key",
      "description": "CA Key that is used to sign other SSL Certificates",
      "required": true,
      "secret": true,
      "generator":
        {
          "id": "ca_cert",
          "generate": {
            "type": "CACertificate",
            "value_type": "private_key"
          }
        }
    },
    {
      "name": "PGSQL_USER",
      "description": "Postgres username",
      "default": "stratos",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "pgsql-password",
      "description": "Stackato DB password",
      "data_type": "string",
      "required": true,
      "secret": true,
      "generator":
        {
          "id": "pgsql_password",
          "generate": {
            "type": "Password"
          }
        }
    },
    {
      "name": "PGSQL_DATABASE",
      "description": "Postgres database name",
      "default": "stratos-db",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "PGSQL_HOST",
      "description": "Postgres hostname",
      "default": "hsc-db-int",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "PGSQL_PORT",
      "description": "Postgres port",
      "default": "5432",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "PGSQL_CONNECT_TIMEOUT_IN_SECS",
      "description": "Postgres connection timeout",
      "default": "100",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "PGSQL_SSL_MODE",
      "description": "Postgres SSL mode",
      "default": "disable",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "POSTGRES_DB",
      "description": "Postgres database name",
      "default": "postgres",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "postgres-password",
      "description": "Postgres password",
      "data_type": "string",
      "required": true,
      "secret": true,
      "generator":
        {
          "id": "postgres_password",
          "generate": {
            "type": "Password"
          }
        }
    },
    {
      "name": "POSTGRES_USER",
      "description": "Postgres username",
      "default": "stolon",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "PGDATA",
      "description": "placeholder",
      "default": "/database/postgres",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "DB_HOST",
      "description": "PostgreSQL host address",
      "default": "hsc-db-int",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "CFGDB_PORT",
      "description": "PostgreSQL port",
      "default": "5432",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "console-cert",
      "description": "TLS certificate for the Console",
      "required": true,
      "secret": true,
      "generator":
        {
          "id": "console_certificate",
          "generate": {
            "type": "Certificate",
            "value_type": "certificate"
          }
        }
    },
    {
      "name": "console-cert-key",
      "description": "TLS private key for the Console",
      "required": true,
      "secret": true,
      "generator":
        {
          "id": "console_certificate",
          "generate": {
            "type": "Certificate",
            "value_type": "private_key"
          }
        }
    },
    {
      "name": "console-proxy-cert",
      "description": "TLS certificate for the Console Proxy",
      "required": true,
      "secret": true,
      "generator":
        {
          "id": "console_proxy_certificate",
          "generate": {
            "type": "Certificate",
            "value_type": "certificate"
          }
        }
    },
    {
      "name": "console-proxy-cert-key",
      "description": "TLS private key for the Console Proxy",
      "required": true,
      "secret": true,
      "generator":
        {
          "id": "console_proxy_certificate",
          "generate": {
            "type": "Certificate",
            "value_type": "private_key"
          }
        }
    },
    {
      "name": "console-db-cert",
      "description": "TLS certificate for the Console Database",
      "required": true,
      "secret": true,
      "generator":
        {
          "id": "console_db_certificate",
          "generate": {
              "type": "Certificate",
              "value_type": "certificate"
          }
        }
    },
    {
      "name": "console-db-cert-key",
      "description": "TLS private key for the Console Database",
      "required": true,
      "secret": true,
      "generator":
        {
          "id": "console_db_certificate",
          "generate": {
            "type": "Certificate",
            "value_type": "private_key"
          }
        }
    },
    {
      "name": "HTTP_CLIENT_TIMEOUT_IN_SECS",
      "description": "HTTP client timeoout",
      "default": "100",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "SKIP_TLS_VERIFICATION",
      "description": "To skip TLS or now?",
      "default": "true",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "CONSOLE_PROXY_TLS_ADDRESS",
      "description": "TLS Address",
      "default": ":3003",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "CONSOLE_CLIENT",
      "description": "Console client",
      "default": "console",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "HCE_CLIENT",
      "description": "HCE client",
      "default": "console",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "HCF_CLIENT",
      "description": "HCF client",
      "default": "cf",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "ALLOWED_ORIGINS",
      "description": "Allowed origins - WHAT DOES THIS NEED TO BE SET TO ?!?!?!?!?!?!??",
      "default": "https://localhost,https://127.0.0.1,http://192.168.200.2,https://192.168.200.2,http://192.168.200.3,https://192.168.200.3,http://172.17.27.1,https://172.17.27.1",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "session-store-secret",
      "description": "Console Proxy session store secret",
      "data_type": "string",
      "required": true,
      "secret": true,
      "generator":
        {
          "id": "session_store_secret",
          "generate": {
            "type": "Password"
          }
        }
    },
    {
      "name": "VCS_CLIENTS",
      "description": "VCS Clients for OAuth",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "UPGRADE_VOLUME",
      "description": "The local shared volume mount for the upgrade lock file.",
      "data_type": "string",
      "default": "hsc-upgrade-volume",
      "required": true,
      "secret": false
    },
    {
      "name": "UPGRADE_LOCK_FILENAME",
      "description": "The filename of the lockfile used to coordinate a Console upgrade.",
      "data_type": "string",
      "default": "upgrade.lock",
      "required": true,
      "secret": false
    },
    {
      "name": "ENCRYPTION_KEY_VOLUME",
      "description": "The local shared volume mount for the encryption key.",
      "data_type": "string",
      "default": "hsc-encryption-key-volume",
      "required": true,
      "secret": false
    },
    {
      "name": "ENCRYPTION_KEY_FILENAME",
      "description": "The filename of the encryption key used to encrypt sensitive data before it gets saved to Postgresql.",
      "data_type": "string",
      "default": "key",
      "required": true,
      "secret": false
    }
  ]
}
