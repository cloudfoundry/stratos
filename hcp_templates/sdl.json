      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "HCF_CLIENT",
      "description": "HCF client",
      "default": "cf",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "ALLOWED_ORIGINS",
      "description": "Allowed origins - WHAT DOES THIS NEED TO BE SET TO ?!?!?!?!?!?!??",
      "default": "https://localhost,https://127.0.0.1,http://192.168.200.2,https://192.168.200.2,http://192.168.200.3,https://192.168.200.3,http://172.17.27.1,https://172.17.27.1",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "session-store-secret",
      "description": "Console Proxy session store secret",
      "data_type": "string",
      "required": true,
      "secret": true,
      "generator":
        {
          "id": "session_store_secret",
          "generate": {
            "type": "Password"
          }
        }
    },
    {
      "name": "VCS_CLIENTS",
      "description": "VCS Clients for OAuth: VCS Provider (string),VCS URL (string),Client ID (string),Client Secret (string),Skip SSL (true|false)",
      "data_type": "string",
      "required": true,
      "secret": false
    },
