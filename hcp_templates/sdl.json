      "default": "stackato",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "PGSQL_PASSWORDFILE",
      "description": "Stackato password file",
      "default": "/etc/secrets/pgsql-password"
    },
    {
      "name": "pgsql-password",
      "description": "Stackato DB password",
      "data_type": "string",
      "required": true,
      "secret": true,
      "generator":
        {
          "id": "pgsql_password",
          "generate": {
            "type": "Password"
          }
        }
    },
    {
      "name": "PGSQL_DATABASE",
      "description": "Postgres database name",
      "default": "stackato-db",
      "data_type": "string",
      "required": true,
      "secret": false
