      "default": "hsc-stproxy-int",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "PGSQL_PORT",
      "description": "Postgres port",
      "default": "5432",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "PGSQL_CONNECT_TIMEOUT_IN_SECS",
      "description": "Postgres connection timeout",
      "default": "100",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "PGSQL_SSL_MODE",
      "description": "Postgres SSL mode",
      "default": "disable",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "console-cert",
      "description": "TLS certificate for the Console",
      "required": true,
      "secret": true,
      "generator":
        {
          "id": "console_certificate",
          "generate": {
            "type": "Certificate",
            "value_type": "certificate"
          }
        }
    },
    {
      "name": "console-cert-key",
      "description": "TLS private key for the Console",
      "required": true,
      "secret": true,
      "generator":
        {
          "id": "console_certificate",
          "generate": {
            "type": "Certificate",
            "value_type": "private_key"
          }
        }
    },
    {
      "name": "console-proxy-cert",
      "description": "TLS certificate for the Console Proxy",
      "required": true,
      "secret": true,
      "generator":
        {
          "id": "console_proxy_certificate",
          "generate": {
            "type": "Certificate",
            "value_type": "certificate"
          }
        }
    },
    {
      "name": "console-proxy-cert-key",
      "description": "TLS private key for the Console Proxy",
      "required": true,
      "secret": true,
      "generator":
        {
          "id": "console_proxy_certificate",
          "generate": {
            "type": "Certificate",
            "value_type": "private_key"
          }
        }
    },
