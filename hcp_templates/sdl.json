{
  "name": "hsc",
  "product_version": "4.0.0",
  "sdl_version": "{{TAG}}",
  "vendor": "HPE",
  "components": [
    {
      "name": "hsc-proxy",
      "version": "{{TAG}}",
      "vendor": "HPE",
      "min_RAM_mb": 256,
      "min_disk_gb": 1,
      "min_VCPU": 1,
      "platform": "linux-x86_64",
      "capabilities": [],
      "repository": "{{REGISTRY}}",
      "image": "hsc-proxy:{{TAG}}",
      "workload_type": "container",
      "entrypoint": [],
      "parameters": [
        {
          "name": "PGSQL_USER"
        },
        {
          "name": "pgsql-password"
        },
        {
          "name": "PGSQL_PASSWORDFILE"
        },
        {
          "name": "PGSQL_DATABASE"
        },
        {
          "name": "PGSQL_HOST"
        },
        {
          "name": "PGSQL_PORT"
        },
        {
          "name": "PGSQL_CONNECT_TIMEOUT_IN_SECS"
        },
        {
          "name": "PGSQL_SSL_MODE"
        },
        {
          "name": "console-proxy-cert"
        },
        {
          "name": "console-proxy-cert-key"
        },
        {
          "name": "HTTP_CONNECTION_TIMEOUT_IN_SECS"
        },
        {
          "name": "HTTP_CLIENT_TIMEOUT_IN_SECS"
        },
        {
          "name": "SKIP_TLS_VERIFICATION"
        },
        {
          "name": "CONSOLE_PROXY_TLS_ADDRESS"
        },
        {
          "name": "CONSOLE_CLIENT"
        },
        {
          "name": "HCE_CLIENT"
        },
        {
          "name": "HCF_CLIENT"
        },
        {
          "name": "ALLOWED_ORIGINS"
        },
        {
          "name": "session-store-secret"
        },
        {
          "name": "VCS_CLIENTS"
        },
        {
          "name": "ENCRYPTION_KEY_VOLUME"
        },
        {
          "name": "ENCRYPTION_KEY_FILENAME"
        }
      ],
      "min_instances": 1,
      "max_instances": 50,
      "service_ports": [
        {
          "name": "proxy",
          "protocol": "TCP",
          "source_port": 3003,
          "target_port": 3003,
          "public": false
        }
      ],
      "volume_mounts": [
        {
          "volume_name": "hsc-upgrade-volume",
          "mountpoint": "/hsc-upgrade-volume"
        },
        {
          "volume_name": "hsc-encryption-key-volume",
          "mountpoint": "/hsc-encryption-key-volume"
        }
      ]
    },
    {
      "name": "hsc-console",
      "version": "{{TAG}}",
      "vendor": "HPE",
      "min_RAM_mb": 256,
      "min_disk_gb": 1,
      "min_VCPU": 1,
      "platform": "linux-x86_64",
      "capabilities": [],
      "repository": "{{REGISTRY}}",
      "image": "hsc-console:{{TAG}}",
      "workload_type": "container",
      "entrypoint": [],
      "parameters": [
        {
          "name": "console-cert"
        },
        {
          "name": "console-cert-key"
        }
      ],
      "min_instances": 1,
      "max_instances": 50,
      "service_ports": [
        {
          "name": "https",
          "protocol": "TCP",
          "source_port": 443,
          "target_port": 443,
          "public": true
        }
      ],
      "volume_mounts": []
    }
  ],
  "features": {
    "auth": [
      {
        "auth_zone": "default",
        "clients": [
          {
            "id": "console",
            "name": "Console Client",
            "scopes": [
                "hcp.admin",
                "hcp.user",
                "uaa.user",
                "hcp.publisher"
            ],
            "authorized_grant_types": [
                "implicit",
                "password",
                "refresh_token"
            ],
            "access_token_validity": 3600,
            "refresh_token_validity": 2592000
          }
        ]
      }
    ]
  },
  "preflight": [
    {
      "name": "hsc-preflight-job",
      "version": "{{TAG}}",
      "vendor": "HPE",
      "min_RAM_mb": 512,
      "min_disk_gb": 1,
      "min_VCPU": 1,
      "platform": "linux-x86_64",
      "workload_type": "container",
      "capabilities": [],
      "repository": "{{REGISTRY}}",
      "image": "hsc-preflight-job:{{TAG}}",
      "entrypoint": [],
      "parameters": [
        {
          "name": "UPGRADE_VOLUME"
        },
        {
          "name": "UPGRADE_LOCK_FILENAME"
        },
        {
          "name": "ENCRYPTION_KEY_VOLUME"
        },
        {
          "name": "ENCRYPTION_KEY_FILENAME"
        }
      ],
      "min_instances": 1,
      "max_instances": 1,
      "timeout": 1800,
      "retry_count": 100,
      "service_ports": [],
      "volume_mounts": [
        {
          "volume_name": "hsc-upgrade-volume",
          "mountpoint": "/hsc-upgrade-volume"
        },
        {
          "volume_name": "hsc-encryption-key-volume",
          "mountpoint": "/hsc-encryption-key-volume"
        }
      ]
    }
  ],
  "postflight": [
    {
      "name": "hsc-postflight-job",
      "version": "{{TAG}}",
      "vendor": "HPE",
      "min_RAM_mb": 512,
      "min_disk_gb": 1,
      "min_VCPU": 1,
      "platform": "linux-x86_64",
      "workload_type": "container",
      "capabilities": [],
      "repository": "{{REGISTRY}}",
      "image": "hsc-postflight-job:{{TAG}}",
      "entrypoint": [],
      "parameters": [
        {
          "name": "PGSQL_HOST"
        },
        {
          "name": "STPROXY_PORT"
        },
        {
          "name": "STKEEPER_PG_SU_USERNAME"
        },
        {
          "name": "STKEEPER_PG_SU_PASSWORDFILE"
        },
        {
          "name": "PGSQL_DATABASE"
        },
        {
          "name": "PGSQL_USER"
        },
        {
          "name": "pgsql-password"
        },
        {
          "name": "PGSQL_PASSWORDFILE"
        },
        {
          "name": "PGSQL_SSL_MODE"
        },
        {
          "name": "UPGRADE_VOLUME"
        },
        {
          "name": "UPGRADE_LOCK_FILENAME"
        }
      ],
      "min_instances": 1,
      "max_instances": 1,
      "timeout": 1800,
      "retry_count": 100,
      "service_ports": [],
      "volume_mounts": [
        {
          "volume_name": "hsc-upgrade-volume",
          "mountpoint": "/hsc-upgrade-volume"
        }
      ]
    }
  ],
  "volumes": [
    {
      "name": "stolon-data-volume",
      "size_gb": 10,
      "filesystem": "ext4",
      "shared": false
    },
    {
      "name": "hsc-upgrade-volume",
      "size_gb": 1,
      "shared": true
    },
    {
      "name": "hsc-encryption-key-volume",
      "size_gb": 1,
      "shared": true
    }
  ],
  "parameters": [
    {
      "name": "CONSOLE_CA_CERT",
      "description": "CA Cert that is used to sign other SSL Certificates",
      "required": true,
      "secret": false,
      "generator":
        {
          "id": "ca_cert",
          "generate": {
            "type": "CACertificate",
            "value_type": "certificate"
          }
        }
    },
    {
      "name": "console-ca-cert-key",
      "description": "CA Key that is used to sign other SSL Certificates",
      "required": true,
      "secret": true,
      "generator":
        {
          "id": "ca_cert",
          "generate": {
            "type": "CACertificate",
            "value_type": "private_key"
          }
        }
    },
    {
      "name": "PGSQL_USER",
      "description": "Postgres username associated with the stackato database",
      "default": "stackato",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "PGSQL_PASSWORDFILE",
      "description": "Stackato password file",
      "default": "/etc/secrets/pgsql-password"
    },
    {
      "name": "pgsql-password",
      "description": "Stackato DB password",
      "data_type": "string",
      "required": true,
      "secret": true,
      "generator":
        {
          "id": "pgsql_password",
          "generate": {
            "type": "Password"
          }
        }
    },
    {
      "name": "PGSQL_DATABASE",
      "description": "Postgres database name",
      "default": "stackato-db",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "PGSQL_HOST",
      "description": "Postgres hostname",
      "default": "hsc-stproxy-int",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "PGSQL_PORT",
      "description": "Postgres port",
      "default": "5432",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "PGSQL_CONNECT_TIMEOUT_IN_SECS",
      "description": "Postgres connection timeout",
      "default": "100",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "PGSQL_SSL_MODE",
      "description": "Postgres SSL mode",
      "default": "disable",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "console-cert",
      "description": "TLS certificate for the Console",
      "required": true,
      "secret": true,
      "generator":
        {
          "id": "console_certificate",
          "generate": {
            "type": "Certificate",
            "value_type": "certificate"
          }
        }
    },
    {
      "name": "console-cert-key",
      "description": "TLS private key for the Console",
      "required": true,
      "secret": true,
      "generator":
        {
          "id": "console_certificate",
          "generate": {
            "type": "Certificate",
            "value_type": "private_key"
          }
        }
    },
    {
      "name": "console-proxy-cert",
      "description": "TLS certificate for the Console Proxy",
      "required": true,
      "secret": true,
      "generator":
        {
          "id": "console_proxy_certificate",
          "generate": {
            "type": "Certificate",
            "value_type": "certificate"
          }
        }
    },
    {
      "name": "console-proxy-cert-key",
      "description": "TLS private key for the Console Proxy",
      "required": true,
      "secret": true,
      "generator":
        {
          "id": "console_proxy_certificate",
          "generate": {
            "type": "Certificate",
            "value_type": "private_key"
          }
        }
    },
    {
      "name": "HTTP_CONNECTION_TIMEOUT_IN_SECS",
      "description": "HTTP connection timeout",
      "default": "10",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "HTTP_CLIENT_TIMEOUT_IN_SECS",
      "description": "HTTP client timeout",
      "default": "20",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "SKIP_TLS_VERIFICATION",
      "description": "Change this value to true if TLS verification should be skipped for UAA related connections. Otherwise, accept the default and they will be verified.",
      "default": "false",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "CONSOLE_PROXY_TLS_ADDRESS",
      "description": "TLS Address",
      "default": ":3003",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "CONSOLE_CLIENT",
      "description": "Console client",
      "default": "console",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "HCE_CLIENT",
      "description": "HCE client",
      "default": "hce",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "HCF_CLIENT",
      "description": "HCF client",
      "default": "cf",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "ALLOWED_ORIGINS",
      "description": "Allowed origins for the Console proxy.",
      "default": "https://hsc-proxy-int",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "session-store-secret",
      "description": "Console Proxy session store secret",
      "data_type": "string",
      "required": true,
      "secret": true,
      "generator":
        {
          "id": "session_store_secret",
          "generate": {
            "type": "Password"
          }
        }
    },
    {
      "name": "VCS_CLIENTS",
      "description": "VCS Clients for OAuth: VCS Provider (string),VCS URL (string),Client ID (string),Client Secret (string),Skip SSL (true|false)",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "UPGRADE_VOLUME",
      "description": "The local shared volume mount for the upgrade lock file.",
      "data_type": "string",
      "default": "hsc-upgrade-volume",
      "required": true,
      "secret": false
    },
    {
      "name": "UPGRADE_LOCK_FILENAME",
      "description": "The filename of the lockfile used to coordinate a Console upgrade.",
      "data_type": "string",
      "default": "upgrade.lock",
      "required": true,
      "secret": false
    },
    {
      "name": "ENCRYPTION_KEY_VOLUME",
      "description": "The local shared volume mount for the encryption key.",
      "data_type": "string",
      "default": "hsc-encryption-key-volume",
      "required": true,
      "secret": false
    },
    {
      "name": "ENCRYPTION_KEY_FILENAME",
      "description": "The filename of the encryption key used to encrypt sensitive data before it gets saved to Postgresql.",
      "data_type": "string",
      "default": "key",
      "required": true,
      "secret": false
    },
    {
      "name": "stolon",
      "description": "PostgreSQL password for superuser",
      "data_type": "string",
      "required": true,
      "secret": true,
      "generator":
        {
          "id": "stolon_password",
          "generate": {
            "type": "Password"
          }
        }
    }
  ]
}
